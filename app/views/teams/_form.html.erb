<%= form_for @team do |f| %>
    <% if @team.errors.any? %>
        <% @team.errors.full_messages.each do |msg| %>
            <div class="alert alert-danger" role="alert">
              <%= msg %>
            </div>
        <% end %>
    <% end %>

    <div class="form-group row">
      <%= f.label "Name", {class: 'col-xs-1 col-form-label'} %>
      <div class="col-xs-6">
        <%= f.text_field :name, {class: 'form-control'} %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label "Captain", {class: 'col-xs-1 col-form-label'} %>
      <div class="col-xs-6">
        <%= f.text_field :captain, {class: 'form-control'} %>
      </div>
    </div>


      <%= f.submit ( f.object.new_record? ? "Create" : "Update"), class: "btn btn-primary" %>
      <%= link_to 'Cancel', teams_path, class: "btn btn-primary" %>

<% end %>