



<div class="heading-bar"><h3>Teams</h3></div>

<div class="col-sm-9">
  <%= render 'form' %>

  </br></br>

  <%= form_tag({action: :uploadbadge}, multipart: true) do %>
      <div class="form-group row">
        <label class="col-sm-4 col-form-label">Badge</label>
        <div class="col-sm-8">
          <%= file_field_tag 'badge',class:"form-control"  %>
        </div>
        <a href="<%= photos_team_path(@team)%>">Choose...</a>
      </div>
      <%= submit_tag "Upload", class: "btn btn-primary" %>
  <% end %>
</div>

<div class="col-sm-2">
  <%= image_tag @team.badge.url(:medium) %>
</div>
