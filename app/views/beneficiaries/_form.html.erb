<%= form_for @beneficiary, builder: LabellingFormBuilder  do |f| %>
    <% if @beneficiary.errors.any? %>
        <% @beneficiary.errors.full_messages.each do |msg| %>
            <div class="alert alert-danger" role="alert">
              <%= msg %>
            </div>
        <% end %>
    <% end %>

    <%= f.label_text_field "Name",:name, {} %>

    <%= f.label_text_field "Short Name",:short_name%>

    <%= f.label_text_field "Map Ref",:geography%>

    <%= f.label_text_field "Geography Description",:geography_description%>

    <%= f.label_text_field "Website",:website%>

    <%= f.label_text_field "Facebook Page",:facebook%>

    <%= f.label_text_field "Description",:description%>

    <%= f.submit ( f.object.new_record? ? "Create" : "Update"), class: "btn btn-primary" %>
    <%= link_to 'Cancel', beneficiaries_path, class: "btn btn-primary" %>

<% end %>
