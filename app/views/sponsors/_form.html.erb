<%= form_for @sponsor, builder: LabellingFormBuilder  do |f| %>
    <% if @sponsor.errors.any? %>
        <% @sponsor.errors.full_messages.each do |msg| %>
            <div class="alert alert-danger" role="alert">
              <%= msg %>
            </div>
        <% end %>
    <% end %>

    <%= f.label_text_field "Name",:name, {} %>

    <%= f.label_text_field "Short Name",:short_name%>

    <%= f.label_text_field "Website",:website%>

    <%= f.label_text_field "Facebook Page",:facebook%>

    <%= f.label_text_field "Website Ref",:ref%>

    <%= f.label_text_field "Admin Email",:email_admin%>

    <%= f.label_text_field "Public Email",:email_public%>

    <%= f.submit ( f.object.new_record? ? "Create" : "Update"), class: "btn btn-primary" %>
    <%= link_to 'Cancel', sponsors_path, class: "btn btn-primary" %>

<% end %>
