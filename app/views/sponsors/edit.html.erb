<div class="heading-bar"><h3>Sponsor</h3></div>


<div class="col-sm-7">
  <%= render 'form' %>

  </br></br>

  <%= form_tag({action: :uploadlogo}, multipart: true) do %>
      <div class="form-group row">
        <label class="col-sm-4 col-form-label">Logo</label>
        <div class="col-sm-8">
          <%= file_field_tag 'logo',class:"form-control"  %>
        </div>

      </div>
      <%= submit_tag "Upload", class: "btn btn-primary" %>
  <% end %>
</div>

<div class="col-sm-3">
  <%= image_tag @sponsor.logo.url(:medium) %>
</div>
