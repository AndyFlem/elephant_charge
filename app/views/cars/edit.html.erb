<div class="heading-bar"><h3>Car</h3></div>

<%= render 'form' %>
<br/>
<br/>
<div class="heading-bar"><h3>Entries</h3></div>
<% @entries.each_with_index do |entry,i| %>
<div class="row">
  <h4><%= entry.charge.ref%> - <%= entry.name%></h4>
</div>
<div class="row">
  <% entry.car_photos.each_with_index do |photo,i| %>
      <% if i%4==0 %>
          </div>
          <div class="row">
      <% end %>
      <div class="col-sm-3">
        <div class="card">
          <%= image_tag photo.photo.url(:medium),class: "card-img-top",style:"display:block;margin-left:auto;margin-right:auto;margin-top:10px;" %>
        </div>
      </div>
  <% end %>
  </div>
<% end %>

